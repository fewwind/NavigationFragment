<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/design_default_color_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/edit_shadow_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:background="#50000000" />

    <View
        android:id="@+id/edit_shadow_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:background="#50000000" />

    <ImageView
        android:id="@+id/edit_btn_left"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:background="@drawable/bth_seek_left"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/edit_btn_right"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:background="@drawable/bth_seek_right"
        android:scaleType="centerInside" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_toLeftOf="@+id/edit_btn_right"
        android:layout_toRightOf="@+id/edit_btn_left"
        android:background="#ffffff" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/edit_btn_right"
        android:layout_toRightOf="@+id/edit_btn_left"
        android:background="#ffffff" />
</RelativeLayout>