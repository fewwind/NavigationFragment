<com.feng.advance.weight.scroll.OutScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:clickable="true"
            android:background="@color/bottom_select" />

        <com.feng.advance.weight.scroll.InnerListlView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="@color/bottom_select" />
    </LinearLayout>
</com.feng.advance.weight.scroll.OutScrollView>

